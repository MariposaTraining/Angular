<div class="row margin-md-bottom">
  <div class="col-md-12" id="eventsContainerLg">
    <div class="panel panel-default well" id="events">
      <div class="panel-heading font-x-large">Upcoming Live Events</div>
      <div class="panel-body">
        <div ng-show="waitingForEventbrite" class="text-center margin-lg-top-bottom">
          <i class="fa fa-spinner fa-spin" style="font-size:24px; color: #ff8000"></i>
        </div>
        <div class="list-group" ng-show="!waitingForEventbrite">
          <div ng-repeat="e in ebEvents" class="list-group-item padding-none margin-md-bottom">
            <div class="row-picture vertical-align-top" ng-click="showDetails[e.id] = !showDetails[e.id];">
              <img class="list-item-icon-larger pointer-cursor" ng-src="{{e.logo.url}}" alt="icon">
            </div>
            <div class="row-content">
              <h4 class="list-group-item-heading" >
                <button class="btn-empty pointer-cursor" ng-click="showDetails[e.id] = !showDetails[e.id];">
                  <i class="material-icons vertical-align-middle green rotate" ng-class="{down : showDetails[e.id]}">play_arrow</i>
                </button>
                <span class="margin-md pointer-cursor" ng-click="showDetails[e.id] = !showDetails[e.id];">{{e.name.text}}</span>
                <div class="row">
                  <div class="col-sm-4 padding-50-left" ng-if="e.venue">
                    <div ng-if="e.venue.name"><small>{{e.venue.name}}</small></div>
                    <div ng-if="e.venue.address && (e.venue.address.address_1 || e.venue.address.address_2)">
                      <small>
                        {{e.venue.address.address_1}}<span ng-show="e.venue.address && (e.venue.address.address_1 && e.venue.address.address_2)">,</span> {{e.venue.address.address_2}}
                      </small></div>
                    <div ng-if="e.venue.address && (e.venue.address.city || e.venue.address.region)"><small>{{e.venue.address.city}} {{e.venue.address.region}}</small></div>
                  </div>
                  <div class="col-sm-8 padding-sm-top">
                    <small class="padding-md">{{e.start.displayedDate}}</small>
                    <button class="btn btn-flat btn-raised btn-sm bg-orange white margin-md pull-right" ng-click="goGlobal(e.url)">
                      Register
                    </button>
                  </div>
                </div>
              </h4>
              <div class="list-group-item-text" ng-show="showDetails[e.id]">
                <hr>
                <div ng-bind-html="e.description.html" class="overflow-x-auto eventbrite-description"></div>
              </div>
              <hr>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

