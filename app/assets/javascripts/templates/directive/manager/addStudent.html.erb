<div class="panel panel-default">
  <div class="panel-heading font-larger">
        <div class="row">
            <div class="col-xs-10 padding-md-top">
                Fill out the form to register a student
            </div>
            <div class="col-xs-2 text-right">
                <button class="btn btn-default btn-sm" ng-click="close()">x</button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form name="registrationFrm" novalidate>
            <div class="alert alert-dismissible alert-danger" ng-show="errorMessage">
                {{errorMessage}}
            </div>
            <div class="alert alert-dismissible alert-success" ng-show="okMessage">
                {{okMessage}}
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-sm-4 padding-md-top">
                            <label>First Name</label>
                        </div>
                        <div class="col-sm-7">
                            <input type="text" name="firstName" class="form-control" required="" ng-minlength="2" ng-model="student.firstName">
                        </div>
                        <div class="col-sm-1">
                            <i class="material-icons green padding-md-top" ng-show="registrationFrm.firstName.$valid">check_circle</i>
                            <i class="material-icons dark-red padding-md-top" ng-show="!registrationFrm.firstName.$valid">highlight_off</i>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 padding-md-top">
                            <label>Last Name</label>
                        </div>
                        <div class="col-sm-7">
                            <input type="text" name="lastName" class="form-control" required="" ng-minlength="2" ng-model="student.lastName">
                        </div>
                        <div class="col-sm-1">
                            <i class="material-icons green padding-md-top" ng-show="registrationFrm.lastName.$valid">check_circle</i>
                            <i class="material-icons dark-red padding-md-top" ng-show="!registrationFrm.lastName.$valid">highlight_off</i>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 padding-md-top">
                            <label>Email Address</label>
                        </div>
                        <div class="col-sm-7">
                            <input type="email" name="emailAddress" class="form-control" required="" ng-minlength="2" ng-model="student.emailAddress">
                        </div>
                        <div class="col-sm-1">
                            <i class="material-icons green padding-md-top" ng-show="registrationFrm.emailAddress.$valid">check_circle</i>
                            <i class="material-icons dark-red padding-md-top" ng-show="!registrationFrm.emailAddress.$valid">highlight_off</i>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 padding-md-top">
                            <label>Facility</label>
                        </div>
                        <div class="col-sm-7">
                            <select ng-model="student.facilitySoid" class="form-control" required="">
                                <option value="">-- select --</option>
                                <option ng-repeat="f in Management.facilities" value="{{f.Soid}}">{{f.Name}}</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <p>Password</p>
                <!--    <div>
                        <label>
                            <input type="radio" ng-model="student.passwordGenerated" ng-value="true" name="passwordGeneratedBtn">
                            Generated
                        </label><br/>
                        <label>
                            <input type="radio" ng-model="student.passwordGenerated" ng-value="false" name="passwordGeneratedBtn">
                            Manual
                        </label>
                    </div> -->
                    <div ng-show="true" class="form-group">
                        <div class="col-sm-6">
                            <input type="text" name="password" class="form-control" ng-required="!student.passwordGenerated" ng-model="student.password" ng-minlength="6">
                            <p class="help-block">At least 6 characters.</p>
                        </div>
                    <!--    <div class="col-sm-1">
                            <i class="material-icons padding-md-top info-blue" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="At least 6 characters.">info</i>
                        </div>-->
                        <div class="col-sm-1">
                            <i class="material-icons green padding-md-top" ng-show="registrationFrm.password.$valid">check_circle</i>
                            <i class="material-icons dark-red padding-md-top" ng-show="!registrationFrm.password.$valid">highlight_off</i>
                        </div>
                    <!--    <div class="col-sm-2">
                            <label class="padding-md-top">
                                <input type="checkbox" ng-model="reuse"> reuse
                           </label>
                        </div>-->
                    </div>
                </div>
            </div>
            <div class="margin-xl-top-bottom">
                <button class="btn btn-raised btn-lg bg-active-btn white" ng-disabled="!registrationFrm.$valid" ng-click="register()">Register</button>
            </div>
        </form>
    </div>
</div>